<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_register_bg_011128"
    tools:context=".login_register.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/color_register_toolbar_001837"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/register_back"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:src="@mipmap/btn_back_dark_normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号注册"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_18"
            android:textStyle="normal"
            />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <!--手机验证-->
    <!--142539-->
    <LinearLayout
        android:id="@+id/ll_ed_phone_emil"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_27_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/register_ed_bg_shape"
        >
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            />
        <EditText
            android:id="@+id/register_ed_phone_emil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:hint="@string/register_phone_emil"
            android:background="@null"
            android:textColor="@color/color_666666"
            android:textStyle="normal"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>
    <!--验证码-->
    <RelativeLayout
        android:id="@+id/l_ed_code"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"

        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/register_ed_bg_shape"
        >
        <ImageView
            android:id="@+id/register_getcode_iv"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/register_ed_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:hint="@string/register_getcode"
            android:background="@null"
            android:textColor="@color/color_999999"
            android:textStyle="normal"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@id/register_getcode_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/register_btn_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_getcode_btn_shape"
            android:text="@string/register_getcode"
            android:textColor="@color/register_btn_bg_2794F9"
            android:paddingStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            />
    </RelativeLayout>
    <!--密码-->
        <LinearLayout
            android:id="@+id/ll_ed_pass"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/register_ed_bg_shape"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />
            <EditText
                android:id="@+id/register_ed_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:hint="@string/register_ed_pass"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/color_999999"
                android:textStyle="normal"
                android:textSize="@dimen/sp_14"
                />
    </LinearLayout>
    <!--邀请码-->
    <LinearLayout
        android:id="@+id/ll_ed_invitation_code"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/register_ed_bg_shape"
        >
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            />

        <EditText
            android:id="@+id/register_ed_invitation_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:hint="@string/register_ed_invite_code"
            android:background="@null"
            android:textColor="@color/color_999999"
            android:textStyle="normal"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_0_5"-->
        <!--android:layout_marginLeft="@dimen/dp_20"-->
        <!--android:layout_marginRight="@dimen/dp_20"-->
        <!--android:layout_marginTop="@dimen/dp_4"-->
        <!--android:background="@color/btn_666666" />-->
    <Button
        android:id="@+id/register_btn"
        android:layout_marginTop="@dimen/dp_49"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape"
        android:textColor="@color/ffffff"
        android:text="@string/register_btn"
        android:textStyle="normal"
        />
</LinearLayout>

