<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/color_register_bg_011128"
    android:theme="@style/AppTheme.AppBarOverlay"
    tools:context=".login_register.FindPasswordActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/color_register_toolbar_001837"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/findpass_back"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:src="@mipmap/btn_back_dark_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/findpass_toolbar_title"
                android:textColor="@color/ffffff"
                android:textSize="@dimen/sp_18"
                android:textStyle="normal"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sp_5"
        app:cardBackgroundColor="@color/cardview_bg_findpass_0F1F36"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/findpass_ll_ed_phone_emil"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />
            <EditText
                android:id="@+id/findpass_ed_phone_emil"
                android:layout_width="@dimen/dp_190"
                android:layout_height="45dp"
                android:lines="1"
                android:textColor="@color/ffffff"
                android:hint="@string/register_phone_emil"
                android:background="@color/c_00000000"
                android:textCursorDrawable="@drawable/textcursor"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/btn_666666"
            />

        <RelativeLayout
            android:id="@+id/findpass_ll_ed_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/findpass_getcode_iv"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            />
        <EditText
            android:id="@+id/findpass_ed_code"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:lines="1"
            android:hint="@string/register_code"
            android:inputType="phone|number"
            android:background="@color/c_00000000"
            android:textCursorDrawable="@drawable/textcursor"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            android:layout_toRightOf="@id/findpass_getcode_iv"
            />

            <TextView
                android:id="@+id/findpass_btn_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="@string/register_getcode"
                android:textColor="@color/ffffff"
                android:paddingStart="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_0_5"-->
                <!--android:layout_marginLeft="@dimen/dp_20"-->
                <!--android:layout_marginRight="@dimen/dp_20"-->
                <!--android:layout_marginTop="@dimen/dp_4"-->
                <!--android:background="@color/btn_666666"-->
                <!--/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--输入新密码-->


    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sp_5"
        app:cardBackgroundColor="@color/cardview_bg_findpass_0F1F36"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/findpass_ll_ed_new_pass"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                >
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    />
                <EditText
                    android:id="@+id/findpass_ed_new_pass"
                    android:layout_width="@dimen/dp_190"
                    android:layout_height="45dp"
                    android:lines="1"
                    android:hint="@string/findpass_ed_new_pass"
                    android:inputType="textPassword"
                    android:background="@color/c_00000000"
                    android:textCursorDrawable="@drawable/textcursor"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/btn_666666"
                />

        <!--确认新密码-->
        <LinearLayout
            android:id="@+id/findpass_ll_queren_new_pass"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />
            <EditText
                android:id="@+id/findpass_queren_ed_new_pass"
                android:layout_width="@dimen/dp_190"
                android:layout_height="45dp"
                android:lines="1"
                android:hint="@string/findpass_ok_new_pass"
                android:inputType="textPassword"
                android:background="@color/c_00000000"
                android:textCursorDrawable="@drawable/textcursor"
                android:paddingBottom="@dimen/dp_3"
                android:paddingTop="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                />
        </LinearLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_0_5"-->
            <!--android:layout_marginLeft="@dimen/dp_20"-->
            <!--android:layout_marginRight="@dimen/dp_20"-->
            <!--android:layout_marginTop="@dimen/dp_4"-->
            <!--android:background="@color/btn_666666" />-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:id="@+id/findpass_queren_btn"
        android:text="确认"
        android:textColor="@color/ffffff"
        android:background="@drawable/shape"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_40"
        />
</LinearLayout>