<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_bg_findpass_0F1F36"
    tools:context=".login_register.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv"
        android:textColor="@color/ffffff"
        android:textStyle="normal"
        android:textSize="@dimen/sp_27"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_70"
        />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </TableLayout>
    <!--引用布局-->

    <include
        layout="@layout/include_usernamelogin_activity_xml"
        android:visibility="visible"
         >
    </include>

    <include
        layout="@layout/include_passworklogin_activity_xml"
        android:visibility="gone"
        >
    </include>


</LinearLayout>